<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myNavigationBottomView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemRippleColor">@color/my_bottom_navigation_ripple</item>
        <item name="itemTextColor">@color/my_bottom_navigation_item</item>
        <item name="itemIconTint">@color/my_bottom_navigation_item</item>
        <item name="itemTextAppearanceActive">@style/myItemTextAppearanceActive</item>
    </style>

    <style name="myItemTextAppearanceActive" parent="TextAppearance.MyTheme.Caption">
        <item name="fontFamily">@font/primary_extra_bold</item>
        <item name="android:fontFamily">@font/primary_extra_bold</item>
    </style>
    
    <style name="Theme.Nike.AuthTheme.Button" parent="Theme.Nike.AuthTheme">
        <item name="backgroundTint">?colorOnBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/primary_bold</item>
    </style>

    <style name="Theme.Nike.AuthTheme.EditText" parent="Theme.Nike.AuthTheme">
        <item name="android:background">@drawable/background_auth_et</item>
        <item name="android:textColorHint">#48ffffff</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ShippingTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    
    <style name="ShippingTextInputEditText" parent="Theme.NikeShop">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Widget.MyTheme.Badge" parent="Widget.MaterialComponents.Badge">
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Badge</item>
    </style>

    <style name="TextAppearance.MyTheme.Badge" parent="TextAppearance.MaterialComponents.Badge">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">casual</item>
        <item name="android:fontFamily">casual</item>
    </style>
    
</resources>
